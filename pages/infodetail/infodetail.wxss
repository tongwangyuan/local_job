}
.zan-icon {
  font-size: 24px;
  margin: 20px;
}

.t-info-comment-item-text{
  margin: 0 3px;
}
.t-info-comment-user {
color:#596494;
}


.t-info-header{
  position: relative;
}
.t-info-icon{
  display: inline-block;
  width: 50px;
  height: 50px;
  border-radius: 25px;
}
.t-info-name{
  display: inline-block;
}
.t-info-name text{
  display: block;
}
.t-info-call{
  position: absolute;
  right: 20px;
  top: 10px;
}

