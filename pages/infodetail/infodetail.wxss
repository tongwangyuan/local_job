.detail-info-footer{
  padding: 0;
  width: 100%;
  display: block;
  position: fixed;
  bottom: 0px;
  height: 60px;
  border-top: 1px solid #f1f1f1;
}
.detail-info-footer view{
  padding: 3px 0 0  0;
  display: inline-block;
  width: 20%;
  text-align: center;
  margin: 0;
  border: none;
  vertical-align: middle;
}
.detail-info-footer text{
  display: block;
  height: 30px;
  font-size: 12px;
  color: black;
}
.footer-share button{
  display: block;
  height: 30px;
  font-size: 12px;
  color: black;
}
.detail-info-footer icon.zan-icon{
  /* height: 30px;  */
  display: block;
  font-size: 12px;
  margin: 0 0 0 0;
}
.detail-info-footer view.footer-callphone{
  padding: 0 0 0  0;
  width: 20%;
  background: green;
  color: white;
  text-align: center;
  line-height: 60px;
}
.detail-info-footer view.footer-share-area{
  display: inline-block;
  padding: 0 0 0  0;
  width: 20%;
  color: white;
  text-align: center;
}
.detail-info-footer .footer-share-area button{
  width: 100%;
  border-radius: 0;
  height: 60px;
  line-height: 60px;
  background: orange;
}

.popup-header text{
  margin: 10px;
  font-size: 14px;
}
.popup-header button{
  float: right;
  margin: 0 10px 0 0;
}
.comment-textarea{
  height: 100px;
  font-size: 16px;
}
.send-comment{
  float: right;
}
.t-info-comment-replay{
  font-size: 12px;
  margin: 0;
  position: absolute;
  right: 15px;
  top: -8px; 
}
.comment-area-header{
  padding: 3px 0 0 5px;
   margin: 5px 0 0 0;
   border-top: 1px solid #f1f1f1;
   font-size: 16px;
}
.t-info-comment-item{
  padding: 0  30px 0 0;
  margin: 5px 0;
}
.t-jobName{
  font-weight: 700;
  font-size: 14px;
}
.border-none{
  border: none;
}
.border-none::after{
  border: none;
}