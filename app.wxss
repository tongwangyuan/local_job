/*-------info----  */
.t-info-item{
  margin: 5px 0;
}
.t-info-header{
  position: relative;
  margin: 5px 0 0 0;
}
.t-info-icon{
  display: inline-block;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin:0 10px;
  vertical-align: middle;
}
.t-info-name{
  display: inline-block;
  vertical-align: middle;
}
.m-b-20{
  margin-bottom: 20px;
}
.t-info-name text{
  display: block;
  font-size: 12px;
}
.t-info-call{
  position: absolute;
  right: 30px;
  top: 10px;
}
.t-info-body{
  padding: 5px 10px;
  font-size: 14px;
  /* text-indent:20px; */
}
.t-info-position{
  padding:  0  0 0 10px;
  font-size: 10px;
  height: 20px;
  position: relative;
}
.t-info-position icon.zan-icon{
  display: inline-block;
   vertical-align: middle; 
  font-size: 10px;
  margin: 0px;
  position: absolute;
  top: -9px;
}
.t-info-position text{
   vertical-align: middle; 
   margin: 2px 0 0  20px;
}
.t-info-footer{
  
}
.t-info-footer>view{
  display: inline-block;
  width: 25%;
  text-align: center;
  font-size: 12px;
}
.t-info-footer>view icon{
  vertical-align: middle;
  margin: 5px;
}
.t-info-footer>view text{
  vertical-align: middle;
}
.t-info-comment{
  padding: 10px;
  font-size: 14px;
}
.t-info-comment-user{
  color: blue;
}
.t-info-comment-item{
  position: relative;
}
.btn-share{
  border: none !important;
  display:inline-block;
  text-align: center;
}

/*------------info end  */

.pageBackground{
  background: #f5f5f5;
